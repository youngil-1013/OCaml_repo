let make_verb () =
  if Random.int 2 = 0
  then "view the problem as"
  else "biject it to";;

let adjectives () =
  let n = Random.int 52
  in if n = 0 then "an abelian"
     else if n = 1 then "an associative"
     else if n = 2 then "a computable"
     else if n = 3 then "a Lebesgue-measurable"
     else if n = 4 then "a semi-decidable"
     else if n = 5 then "a simple"
     else if n = 6 then "a combinatorial"
     else if n = 7 then "a structure-preserving"
     else if n = 8 then "a diagonalizable"
     else if n = 9 then "a nonsingular"
     else if n = 10 then "an orientable"
     else if n = 11 then "a twice-differentiable"
     else if n = 12 then "a thrice-differentiable"
     else if n = 13 then "a countable"
     else if n = 14 then "a prime"
     else if n = 15 then "a complete"
     else if n = 16 then "a continuous"
     else if n = 17 then "a trivial"
     else if n = 18 then "a 3-connected"
     else if n = 19 then "a bipartite"
     else if n = 20 then "a planar"
     else if n = 21 then "a finite"
     else if n = 22 then "a nondeterministic"
     else if n = 23 then "an alternating"
     else if n = 24 then "a convex"
     else if n = 25 then "an undecidable"
     else if n = 26 then "a dihedral"
     else if n = 27 then "a context-free"
     else if n = 28 then "a rational"
     else if n = 29 then "a regular"
     else if n = 30 then "a Noetherian"
     else if n = 31 then "a Cauchy"
     else if n = 32 then "an open"
     else if n = 33 then "a closed"
     else if n = 34 then "a compact"
     else if n = 35 then "a clopen"
     else if n = 36 then "a pointless"
     else if n = 37 then "a perfect"
     else if n = 38 then "a non-degenerate"
     else if n = 39 then "a degenerate"
     else if n = 40 then "a skew-symmetric"
     else if n = 41 then "a sesquilinear"
     else if n = 42 then "a fundamental"
     else if n = 43 then "a smooth"
     else if n = 44 then "a connected"
     else if n = 45 then "a simplicial"
     else if n = 46 then "an universal"
     else if n = 47 then "a greedy"
     else if n = 48 then "a normal"
     else if n = 49 then "a total"
     else if n = 50 then "a left invertible"
     else if n = 51 then "an exact"
     else "an empty";;

let firstnoun () =
  let n = Random.int 5
  in if n = 0 then "multiset"
     else if n = 1 then "metric spaces"
     else if n = 2 then "group"
     else if n = 3 then "monoid"
     else if n = 4 then "semigroup"
     else if n = 5 then "ring"
     else if n = 6 then "field"
     else if n = 7 then "module"
     else if n = 8 then "topological space"
     else if n = 9 then "Hilbert space"
     else if n = 10 then "manifold"
     else if n = 11 then "hypergraph"
     else if n = 12 then "DAG"
     else if n = 13 then "residue class"
     else if n = 14 then "logistic system"
     else if n = 14 then "complexity class"
     else if n = 15 then "language"
     else if n = 16 then "poset"
     else if n = 17 then "algebra"
     else if n = 18 then "Lie algebra"
     else if n = 19 then "Dynkin system"
     else if n = 20 then "sigma-algebra"
     else if n = 21 then "ultrafilter"
     else if n = 22 then "Cayley graph"
     else if n = 23 then "variety"
     else "orbit";;

let secondnoun () =
  let n = Random.int 22
  in if n = 0 then "integer"
     else if n = 1 then "Turing machine"
     else if n = 2 then "automorphism"
     else if n = 3 then "bijection"
     else if n = 4 then "generating function"
     else if n = 5 then "taylor series"
     else if n = 6 then "linear transformation"
     else if n = 7 then "pushdown automaton"
     else if n = 8 then "combinatorial game"
     else if n = 9 then "equivalence relation"
     else if n = 10 then "tournament"
     else if n = 11 then "random variable"
     else if n = 12 then "triangulation"
     else if n = 13 then "unbounded-fan-in circuit"
     else if n = 14 then "log-space reduction"
     else if n = 14 then "Markov chain"
     else if n = 15 then "4-form"
     else if n = 16 then "7-chain"
     else if n = 17 then "operator"
     else if n = 18 then "homeomorphism"
     else if n = 19 then "color"
     else if n = 20 then "Betti number"
     else if n = 21 then "Radon-Nikodym derivative"
     else "easter egg";;


let make_proof () =
  "The proof is trivial! Just " ^ make_let make_verb () =
  if Random.int 2 = 0
  then "view the problem as"
  else "biject it to";;

